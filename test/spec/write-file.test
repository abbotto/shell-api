#!/usr/bin/env sh

set -u

SPEC_NAME='write_file'
export SPEC_NAME

tmp=$(mktemp -d)

# Remove the temporary directory when the script quits
# shellcheck disable=SC2064
trap "rm -rf '${tmp}'" EXIT INT HUP TERM

. ./test/tmp/shell-api
./test/util/test-intro.sh

spec --describe "∙ should pass when a file is written to disk..."
spec --evaluate "write_file '${tmp}/write-file' 'hello world'"
spec --assert "${?}" 0

spec --describe "∙ should fail when there are not enough arguments..."
spec --evaluate "write_file >/dev/null 2>&1"
spec --assert "${?}" 127

spec --describe "∙ should fail when there are too many arguments..."
spec --evaluate "write_file 1 2 3 4 >/dev/null 2>&1"
spec --assert "${?}" 1

. ./test/util/test-outro.sh
